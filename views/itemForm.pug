extends layout 

block content 
  h1= title 

  form(method="post")
    div.form-group
      label(for="name") Name: 
      input#name.form-control(
        type="text"
        placeholder="Item Name"
        name="name"
        required
        value=(undefined===item ? "" : item.name)
        minLength="4"
        maxLength="100"
      )
    div.form-group
      label(for="description") Description: 
      input#description.form-control(
        type="text" 
        placeholder="This is a category" 
        name="description" 
        required 
        value=(undefined===item ? "" : item.description)
        minLength="5"
        maxLength="400"
      )
    div.form-group
      label(for="price") Price in â‚¬:
      input#price.form-control(
        type="number"
        placeholder="0"
        name="price"
        required 
        value=(undefined===item ? "" : item.price)
        min="0"
        step="0.01"
      )
    div.form-group
      label(for="amount") Amount:
      input#amount.form-control(
        type="number"
        placeholder="0"
        name="amount"
        required 
        value=(undefined===item ? "" : item.amount)
        min="0"
      )
    div.form-group
      label(for="category") Category:
      select#category.form-control(name="category" required)
        option(value="") --Please select category--
        for category in categoryList 
          if item 
            if item.category._id.toString() === category._id.toString()
              option(value=category._id selected) #{category.name}
            else 
              option(value=category._id) #{category.name}
          else 
            option(value=category._id) #{category.name}
    div.form-group
      label(for="picture") Picture 
      input#picture.form-control(
        type="text"
        name="picture"
        placeholder="Insert image URL here"
        value=(undefined===item ? "" : item.picture)
      )
    .form-group 
      label(for="password") Secred Admin Password
      input#password.form-control(
        name="password"
        type="text"
        required
        placeholder="Insert secret admin password to make changes"
      )
    button.btn.btn-primary(type="submit") Submit


  if errors
    ul
      for error in errors
        li!= error.msg
